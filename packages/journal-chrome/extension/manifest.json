{
  "name": "Journal",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Journal - A wiki and media orgnanizer that supports saving images, video and text directly from web pages via the context menu.",
  "homepage_url": "https://github.com/mpkelly/journal",
  "icons": {
    "16": "icons/icon.png",
    "19": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["contextMenus", "http://*/", "https://*/"],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "background": {
    "scripts": [
      "media-store.js",
      "background.js",
      "lib/react-dom.production.min.js",
      "lib/react.production.min.js",
      "index.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "fonts/open-sans-v17-latin-700.woff",
    "fonts/open-sans-v17-latin-700.woff2",
    "fonts/open-sans-v17-latin-regular.woff",
    "fonts/open-sans-v17-latin-regular.woff2",
    "css/styles.css",
    "background.html",
    "index.html"
  ],
  "browser_action": {
    "title": "Open Journal",
    "default_icon": {
      "19": "icons/icon.png",
      "38": "icons/icon.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-0hPpcK6hhu99ltiXzNZdfbnhsOmjAtisOjnpyV1v/5s=' https://ssl.google-analytics.com/ga.js; object-src 'self'",
  "offline_enabled": true
}
