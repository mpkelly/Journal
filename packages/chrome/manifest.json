{
  "name": "Journal",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Journal - A wiki and media orgnaizer that supports grabbing images, video and text directly from web pages via the context menu.",
  "homepage_url": "https://github.com/mpkelly/journal",
  "icons": {
    "16": "icons/icon.png",
    "19": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "scripts": ["media-store.js", "background.js"],
    "persistent": false
  },
  "permissions": ["contextMenus", "activeTab"],
  "browser_action": {
    "title": "Open Journal",
    "default_icon": {
      "19": "icons/icon.png",
      "38": "icons/icon.png"
    }
  },
  "content_security_policy": "script-src 'self' 'sha256-0hPpcK6hhu99ltiXzNZdfbnhsOmjAtisOjnpyV1v/5s=' https://ssl.google-analytics.com/ga.js; object-src 'self'"
}
